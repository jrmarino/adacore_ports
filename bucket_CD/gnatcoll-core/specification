DEF[PORTVERSION]=	24.0.0
DEF[RELEASE]=		v${PORTVERSION}
DEF[SOVERSION]=		0.0
DEF[JQUERY]=		EXTRACT_INFO(LATEST_JQUERY)
DEF[UNDERSCORE]=	EXTRACT_INFO(SPHINX_UNDERSCORE)
# ----------------------------------------------------------------------------

NAMEBASE=		gnatcoll-core
VERSION=		${PORTVERSION}
EPOCH=			1
KEYWORDS=		devel
VARIANTS=		standard
SDESC[standard]=	Core packages of GNAT Components Collection
HOMEPAGE=		https://github.com/AdaCore/gnatcoll-core
CONTACT=		John_Marino[draco@marino.st]

DOWNLOAD_GROUPS=	main
SITES[main]=		GITHUB/AdaCore:gnatcoll-core:${RELEASE}
DISTFILE[1]=		generated:main

SPKGS[standard]=	complete primary dev docs examples

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		GPLv3+:primary
LICENSE_FILE=		GPLv3+:{{WRKSRC}}/COPYING3
LICENSE_TERMS=		primary:{{WRKDIR}}/TERMS
LICENSE_AWK=		TERMS:"^$$"
LICENSE_SOURCE=		TERMS:{{WRKSRC}}/src/gnatcoll.ads
LICENSE_SCHEME=		solo

BUILD_DEPENDS=		python-Sphinx:single:python_default
			python-sphinx-rtd-theme:single:python_default
			xmlada:dev:standard
			gprbuild:dev:standard
BUILDRUN_DEPENDS=	xmlada:primary:standard
			gprbuild:gprlib:standard

EXRUN[dev]=		xmlada:dev:standard
			gprbuild:dev:standard

USES=			gprbuild gmake
MAKE_ARGS=		prefix={{STAGEDIR}}{{PREFIX}}
			ENABLE_SHARED=yes
			BUILD=PROD
			PROCESSORS={{MAKE_JOBS_NUMBER}}
			TARGET={{CONFIGURE_TARGET}}
			NORMALIZED_TARGET={{CONFIGURE_TARGET}}
			INTEGRATED=no
BUILD_TARGET=		build
INSTALL_REQ_TOOLCHAIN=	yes
SOVERSION=		${SOVERSION}
PLIST_SUB=		JQUERY=${JQUERY}
			UNDERSCORE=${UNDERSCORE}

VAR_OPSYS[linux]=	MAKEFILE_LINE=DYNLINK=-ldl

pre-configure:
	${REINPLACE_CMD} \
		-e 's|@PREFIX@|${PREFIX}|' \
		-e 's|@DYNLINK@|${DYNLINK}|' \
		${WRKSRC}/gnatcoll.gpr

do-configure:
	(cd ${WRKSRC} && ${SETENV} ${MAKE_ENV} ${MAKE_CMD} ${MAKE_ARGS} setup)

pre-build:
	(cd ${BUILD_WRKSRC}/docs && ${DO_MAKE_BUILD} html)

post-install:
	${RM} -r ${STAGEDIR}${PREFIX}/share/gpr/manifests
	${RM} -r ${STAGEDIR}${PREFIX}/share/doc/gnatcoll/html/_sources
	${STRIP_CMD} ${STAGEDIR}${PREFIX}/lib/libgnatcoll.so
