DOWNLOAD_GROUPS=	main
SITES[main]=		GITHUB/AdaCore:ada_language_server:${RELEASE}
DISTFILE[1]=		generated:main

SPKGS[standard]=	complete primary dev

OPTIONS_AVAILABLE=	none
